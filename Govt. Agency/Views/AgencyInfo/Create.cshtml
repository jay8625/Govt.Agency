@model Govt.Agenct.DAL.Model.AgencyInfo

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div class="row">
            <h4>PropertyInfo</h4>
            <hr />
        <div class="col-md-12 row borders">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="col pos" id="CountryList" asp-items="@ViewBag.Countries">
                        <option>Select Country</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="OfficePhone" class="control-label"></label>
                    <input asp-for="OfficePhone" class="form-control" />
                    <span asp-validation-for="OfficePhone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="col pos" id="StateList">
                        <option value="-1">Select State</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-8">
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="col pos" id="CityList">
                        <option>Select City</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="GovtImage" class="control-label"></label>
                    <input asp-for="GovtImage" class="form-control" />
                    <span asp-validation-for="GovtImage" class="text-danger"></span>
                </div>
            </div>
        </div>
        <h4>Agency Info</h4>
        <hr />
        <div class="col-md-12 row borders">
            <div class="row col-md-8">
                <div class="form-group">
                    <select class="col pos" asp-items="@ViewBag.AgencyTypes">
                        <option>Select Type</option>
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-md-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Broucher" /> @Html.DisplayNameFor(model => model.Broucher)
                    </label>
                </div>
                <div class="form-group form-check col-md-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="AidOrganization" /> @Html.DisplayNameFor(model => model.AidOrganization)
                    </label>
                </div>
                <div class="form-group form-check col-md-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="BroucherCopy" /> @Html.DisplayNameFor(model => model.BroucherCopy)
                    </label>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-8">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comments" class="control-label"></label>
                    <input asp-for="Comments" class="form-control" />
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notify" class="control-label"></label>
                    <input asp-for="Notify" class="form-control" />
                    <span asp-validation-for="Notify" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DocumentAttachment" class="control-label"></label>
                    <input asp-for="DocumentAttachment" class="form-control" />
                    <span asp-validation-for="DocumentAttachment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
<script>
    $(document).ready(function(){
        $('#CountryList').change(function(){
            $('#StateList').empty();
            $('#CityList').empty();
            $.ajax({
            type:'Get',
            url:'@Url.Action("LoadStates")',
            dataType: 'Json',
            data:{id:$('#CountryList').val()},
            success: function (states) {
                $('#StateList').append('<option value="'+ -1 +'">' +
                "Select State" + '</option>');
                $.each(states,function(i,state){
                    $("#StateList").append('<option value="' + state.value +'">' +
                    state.text + '</option>');                
                });
            },
            error: function(ex)
            });
        return false;
        })
    });
</script>